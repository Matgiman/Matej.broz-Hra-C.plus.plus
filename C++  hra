    if (uvodniVolba == 1) {
    } else if (uvodniVolba == 2) {
        cout << "Rozhodl ses hru ukoncit. Mozna priste...\n";
        return 0;
    } else {
        cout << "Neplatna volba, hra se ukoncuje.\n";
        return 0;
